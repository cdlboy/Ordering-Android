<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#76c6c6c6"
                android:id="@+id/main_list_rl"
>

    <TextView
        android:id="@+id/main_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="一号餐厅"
        android:textColor="@color/alltextcolor"
        android:textSize="28sp"
    />
    <TextView
        android:id="@+id/main_list_slogen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_list_title"
        android:layout_centerHorizontal="true"
        android:text="一家美味的餐厅..."
        android:textColor="@color/alltextcolor"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
    />
</RelativeLayout>
