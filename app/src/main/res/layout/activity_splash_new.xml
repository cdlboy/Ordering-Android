<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splashnew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#272E40"
    tools:context="app.nosleep.com.ordering.SplashActivity">

    <TextView
        android:id="@+id/splashnew_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点点儿"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/splashnew_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V0.1"
        android:layout_below="@id/splashnew_title"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/splashnew_title"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/splashnew_title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好，想吃点什么？"
        android:layout_below="@id/splashnew_version"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/splashnew_title_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随便点点儿吧！"
        android:layout_below="@id/splashnew_title_one"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@mipmap/startone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splashnew_title_two"
        android:layout_marginTop="79dp"
        />
</RelativeLayout>
